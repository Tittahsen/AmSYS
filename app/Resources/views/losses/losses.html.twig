{% extends 'secure_base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-xs-12 col-lg-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-user "></i> {{ userCharacterName }}</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <table class="table table-bordered table-hover" id="zLosses">
                                <thead>
                                <tr>																	<th class='hidden'>ID</th>																	<th>Icon</th>
                                    <th>Date</th>
                                    <th>Ship Type</th>
                                    <th>Isk Amount</th>
                                    <th>SRP Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for loss in losses %}
									<tr id="kill-{{loss.killID}}">										<td class='hidden'>{{loss.killID}}</td>									
										<td><img src='https://imageserver.eveonline.com/Type/{{loss.victim.shipTypeID}}_64.png' /></td>
										<td>{{loss.killTime|date("D, M jS")}}<br />@ {{loss.killTime|date("G:s")}}</td>
										<td>{{loss.victim.shipTypeID}}</td>
										<td>{{loss.zkb.totalValue|number_format(0, '.', ',')}}</td>																				<td>											<a class="btn btn-app bg-green">												<i class="fa fa-money"></i> SRP											</a>											<a class="btn btn-app bg-blue">												<i class="fa fa-truck"></i> Order											</a>										</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}

<script type="text/javascript">
    $(document).ready(function (e) {

        $(function () {
          $('[data-toggle="tooltip"]').tooltip()
        });

        $('.data-table').DataTable();
        $('#zLosses').DataTable({
            "order": [[ 0, "desc" ]]
        });

    });
</script>

{% endblock %}
