{% extends 'secure_base.html.twig' %}

{% block body %}

    <div class="row">			{% if stats.pending > 0 %}		<div class="col-xs-12 col-lg-4 pull-right">			<div class="info-box">				<span class="info-box-icon bg-green"><i class="fa fa-money"></i></span>				<div class="info-box-content">					<span class="info-box-text">Pending Income</span>					<span class="info-box-number" id="pendingIncome">{{incomePending|number_format(0, '.', ',')}}</span>					<span class="text-muted"></span>				</div><!-- /.info-box-content -->			</div>					</div>		{% endif %}				<div class="col-xs-12 col-lg-8">            <div class="box">                <div class="box-header with-border">                    <h3 class="box-title"><i class="fa fa-user "></i> Review Queue</h3>                </div>                <div class="box-body">                    <div class="row">                        <div class="col-xs-12">                            <table class="table table-bordered table-hover" id="pastRequests">                                <thead>                                <tr>																	<th class='hidden'>ID</th>																	<th>Icon</th>                                    <th>Ship Type</th>                                    <th>Isk Amount</th>                                    <th>SRP Status</th>                                </tr>                                </thead>                                <tbody>									<tr>										<td colspan='6'>											<div class='modal-loading' style='font-size:52px;'><i class='fa fa-refresh fa-spin'></i></div>										</td>									</tr>                                </tbody>                            </table>                        </div>                    </div>                </div>            </div>        </div>				<div class="col-xs-12 col-lg-4">					<div class="row">								<div class="visible-lg col-lg-12">					<!-- /.info-box -->					<div class="info-box bg-green">						<span class="info-box-icon"><i class="ion ion-android-checkbox-outline"></i></span>						<div class="info-box-content">							<span class="info-box-text">Accepted</span>							<span class="info-box-number">{{stats.pending}}</span>							<div class="progress">								<div class="progress-bar" style="width: {{ (100 * (stats.pending / stats.all)) }}%"></div>							</div>							<span class="progress-description">								{{ (100 * (stats.pending / stats.all)) }}% Acceptance Rate							</span>						</div>					<!-- /.info-box-content -->					</div>				</div>							</div>		</div>
    </div>

{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" />
{% endblock %}

{% block javascripts %}

<script type="text/javascript">
    $(document).ready(function (e) {		$.get('{{path('ajax_srp_history')}}').then(function(response) {			$( "#pastRequests ").parent().html( response );						$('#pastRequests').DataTable({				"order": [[ 0, "desc" ]]			});		});
    });
</script>

{% endblock %}
