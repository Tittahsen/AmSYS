    <script type="text/javascript">

        $(document).ready(function (e) {

            {% if is_granted('ROLE_ADMIN') %}
                setBadging();
            {% endif %}

            $("#search-btn").click(function(e) {

                doSearch();
            });

            $("#search-input").keydown(function(e) {

                if(e.keyCode == 13) {

                    doSearch();
                }
            });
        });

        function doSearch() {

            $( "#base_modal_content" ).html("<div class='modal-loading' style='font-size:52px;'><i class='fa fa-refresh fa-spin'></i></div>");
            $('#base_modal').modal({backdrop: "static"});

            $.post('{{path('ajax_lookup_price')}}', {id: $("#search-input").val()},
                function(response)
                {
                    $( "#base_modal_content" ).html( response );
                }
            , "html");

            $("#search-input").val("");
        }

        function setBadging() {
            $.post('{{path('ajax_transaction_badging')}}', function(response) {

                    var jsonResponse = JSON.parse(response);

                    updatePurchaseQueueBadge(typeof(jsonResponse.purchaseQueueBadge) == 'number' ? jsonResponse.purchaseQueueBadge : 0);
                    updateSRPQueueBadge(typeof(jsonResponse.SRPQueueBadge) == 'number' ? jsonResponse.SRPQueueBadge : 0);

			} , "html");
        }
    </script>


